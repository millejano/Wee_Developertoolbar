<?xml version="1.0"?>
<config>
	<sections>
		<dev translate="label" module="core">
			<label>Developer</label>
			<tab>advanced</tab>
			<frontend_type>text</frontend_type>
			<sort_order>920</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<wee_developertoolbar translate="label">
					<label>Wee Developer Toolbar</label>
					<frontend_type>text</frontend_type>
					<sort_order>1000</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<!-- deactivate Support in the backend if a newer jQuery version is already loaded by the page.xml -->
						<jquery_frontend translate="label">
							<label>jQuery Support Frontend</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</jquery_frontend>
						<jquery_backend translate="label">
							<label>jQuery Support Backend</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</jquery_backend>
					</fields>
				</wee_developertoolbar>
			</groups>
		</dev>
	</sections>
</config>
